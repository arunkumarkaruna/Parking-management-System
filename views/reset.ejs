<body">
  <!--Section: Block Content-->
<section class="mb-5 text-center mt-56">
  <p>Hello <%= firstname %></p>
  <p>Set a new password</p>
  <% include ./partials/messages %>
  <form action="/users/reset" method="POST">
    <input type="hidden" name="token" value="<%= token %>" />
    <div class="md-form md-outline">
      <input type="password" id="newPass" name="newpassword" class="form-control">
      <label data-error="wrong" data-success="right" for="newPass">New password</label>
    </div>

    <div class="md-form md-outline">
      <input type="password" id="newPassConfirm" name="newpassword2" class="form-control">
      <label data-error="wrong" data-success="right" for="newPassConfirm">Confirm password</label>
    </div>

    <button type="submit" class="btn btn-primary mb-4">Change password</button>

  </form>

</section>
<!--Section: Block Content-->
</body>
</html>